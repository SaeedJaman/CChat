<body style="background: white">
    <div class="container">
        <div class="row mainDiv" style="background-image:url(/images/bg_main.gif)">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <img src="~/images/loginLeftSide.png" style="width: 100%; height:100%;" class="img-reponsive" />
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" id="login-form-id">
                <div class="custom-control-inline">
                    <img src="~/images/Bangladesh-Govt-Logo.jpg" style="margin:0px 0px 10px 0px;" height="110" width="110" />
                    <span id="text-id" style="color:black; padding-left: 20px; margin-top:20px; font-size:20px; font-weight:bold">Welcome to Department of Mass Communication </span>
                </div>

                <div class="container">
                    <div class="container">
                        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" id="login-form-id">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label>User ID</label>
                                <div>
                                    <i class="fa fa-user icon"></i>
                                    <input type="text" class="form-control" id="exampleInputEmail" name="Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div>
                                    <i class="fa fa-key icon"></i>
                                    <input type="password" class="form-control" name="Password" id="exampleInputPassword">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                    <input type="checkbox" name="RememberMe" onclick="handleClick(this)" class="custom-control-input" id="customCheck">
                                    <label class="custom-control-label" for="customCheck">Stay Sign In</label>
                                </div>
                            </div>
                            <div class="form-group" style="text-align:center">
                                <input type="submit" value="Login" class="btn btn-primary" style="padding-left: 40px; padding-right:40px;">
                                <br /><br />
                                <a class="collapse-item" asp-area="" asp-controller="" asp-action=""><span class="text-primary"> <b>Forgot Password?</b></span></a>
                                <br />
                                <span>
                                    Haven't Any Account! <a class="collapse-item" asp-area="Auth" asp-controller="Account" asp-action="Register"><span class="text-primary"> <b>Register</b></span></a>
                                </span>
                                <br />
                                <span>
                                    <a target="_blank" class="collapse-item" href="https://www.dpp.gov.bd/bgpress/index.php/page/citcharter"><span class="text-primary"> <b>citizen charter</b></span></a>
                                </span>
                                <br />
                                <span>
                                    <a target="_blank" class="collapse-item" href="http://www.masscommunication.gov.bd/"><span class="text-primary"> <b>DMC Website |</b></span></a>
                                </span>
                                <span>
                                    <a target="_blank" class="collapse-item" href="https://www.facebook.com/groups/554915931229351/"><span class="text-primary"> <b>Facebook |</b></span></a>
                                </span>
                                <span>
                                    <a target="_blank" class="collapse-item" href="https://www.youtube.com/channel/UClNFMJ3QllcvbXYoe2R8fGQ?app=desktop"><span class="text-primary"> <b>Youtube</b></span></a>
                                </span>
                            </div>
                            @*<button type="submit" style="background-color:#683091;border-color:#683091;" class="btn btn-info btn-user btn-block">
                                    Login
                                </button>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

