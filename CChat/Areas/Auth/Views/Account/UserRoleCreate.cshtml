@model ApplicationRoleViewModel
@{
    ViewData["Title"] = "User Role Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="width: 100%;">
    <div class="card-body">
        <a class="btn btn-success btn-sm ml-2" id="backBtn" style="float:right; color:white">&nbsp; &nbsp; Back &nbsp; &nbsp;</a>
        <h5 class="card-title" style="color: black; font-weight:bold">User Role Information</h5>
        <hr>
        <div class="container">
            <form asp-area="Auth" asp-controller="Account" asp-action="UserIdentityRoleCreate" method="post">


                <div class="form-group row">

                    <label for="RoleName" class="col-sm-4 col-form-label">Role Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="RoleName" id="RoleName">
                        <input type="hidden" class="form-control" name="RoleId" id="RoleId">
                    </div>
                </div>

                <hr />
                <button type="submit" id="btnSubmit" value="Submit" class="btn btn-success" style="float:right; margin-top:5px;">Save</button>
            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 style="color: black; font-weight:bold">Role List</h5>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="countryTable">
                    <thead>
                        <tr>
                            @*<th>Module</th>*@
                            <th>Role Name</th>
                            @*<th>Description</th>*@
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.roleViewModels)
                        {
                            <tr>
                                @*<td>@data.moduleName</td>*@
                                <td>@data.RoleName</td>
                                @*<td>@data.description</td>*@
                                <td>
                                    <a class="btn btn-success" onclick="Edit('@data.RoleId', '@data.RoleName')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

        function SaveRole() {
            if ($('#RoleName').val() === '') {
                alert("Enter Role Name.");
                return false;
            }

            $.ajax({
                contentType: "application/json; charset=utf-8",
                url: '@Url.Action("UserIdentityRoleCreate", "Account", "http")',
                type: "POST",
                dataType: 'json',
                async: true,
                data: { roleName: $('#RoleName').val() },
                success: function (data) {

                    alert($("#RoleName").val() + ' Data is Saved Successfully');

                },
                error: function () {
                    alert("Fail to save");
                }
            });
        }

        $(document).ready(function () {
            $('#roleTable').DataTable();

            var modelId = window.localStorage.getItem('modelId');
            var parentId = window.localStorage.getItem('parentId');

            if (modelId != null) {
                $("#backBtn").prop('href', '/Home/GridMenuPage?moduleId=' + modelId + '&perentId=' + parentId);
            } else {
                $("#backBtn").prop('href', '/');
            }

        });

        function Edit(Id, name) {
            $("#RoleId").val(Id);
            $("#RoleName").val(name);
        }
    </script>
}

